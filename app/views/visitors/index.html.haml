%html.no-js{lang: 'dk'}
	/ <![endif]>
	%head
		- current = 'ingen'
		= render 'layouts/head_v2'

		:css
			label.picker { font-size: .75em; line-height: 1.5em; margin-top: -5px; color: #9e9e9e }


	%body
		= render partial: 'layouts/navbar', locals: {current: current}
		= render 'layouts/messages'

		#index-banner.parallax-container
			.section.no-pad-bot
				.container
					%br/
					%br/
					%h1.header.center.white-text.brown-lighten-2 Job sporet
					.row.center
						%h5.header.col.s12.light= t('jobspor.header')
					.row.center
						%a#download-button.btn-large.waves-effect.waves-light.brown.darken-2{href:  "/jobs" }= t('jobspor.job-link')
					%br/
					%br/
			.parallax
				= image_tag "background1.jpg"
		.container
			.section
				/ Icon Section
				.row
					.col.s12.m4
						.icon-block
							%h2.center.brown-text
								%i.mdi-image-flash-on
							%h5.center= t('jobspor.employer.header')
							%p.light= t('jobspor.employer.bread')
							.center
								%a.waves-effect.waves-light.btn.modal-trigger.orange{href:  "#jobopslag"}= t('jobspor.employer.new-job')
					.col.s12.m4
						.icon-block
							%h2.center.brown-text
								%i.mdi-action-settings
							%h5.center= t('jobspor.applicant.header')
							%p.light
								=t('jobspor.applicant.bread_html')
							/ Modal Trigger
							.center
								%a.waves-effect.waves-light.btn.modal-trigger.orange{href:  "#jobtilmelding"}= t('jobspor.applicant.new-application')

					.col.s12.m4
						.icon-block
							%h2.center.brown-text
								%i.mdi-social-group
							%h5.center= t('jobspor.employee.header')
							%p.light= t('jobspor.employee.bread_html')
							.center
								%a.waves-effect.waves-light.btn.modal-trigger.orange{href:  "#jobstikker"} Psst her er jeg og mit job!

		.parallax-container.valign-wrapper
			.section.no-pad-bot
				.container
					.row.center
						%h5.header.col.s12.light= t('teaser.header')
			.parallax
				= image_tag "jobbere.jpg"

		.container
			.section
				.row
					.col.s12
						%h4= t('teaser.title')
						%p.light
							= t('teaser.p1')
						%p.light
							= t('teaser.p2')
						%p.light= t('teaser.p3')
						%p.light
							= t('teaser.p4')
						%p.light
							= t('teaser.p5_html')


		.parallax-container.valign-wrapper
			.section.no-pad-bot
				.container
					.row.center
						%h5.header.col.s12.light= t('employer.header')
			.parallax
				= image_tag "telte2.jpg"


		.container
			.section
				.row
					.col.s12
						%h3= t('employer.title_html')
						%p.light= t('employer.p1_html')
						%p.light
							= t('employer.p2_html')
							= t('employer.list_html')
						%p.light= t('employer.p3')
						%p.light= t('employer.p4')
						/ Modal Trigger
						.center
							%a.waves-effect.waves-light.btn.modal-trigger.orange{href:  "#jobopslag"}= t('jobspor.employer.new-job')

		.parallax-container.valign-wrapper
			.section.no-pad-bot
				.container
					.row.center
						%h5.header.col.s12.light= t('hr.header')
			.parallax
				= image_tag "background2.jpg"

		.container
			.section
				/ Icon Section
				.row
					.col.s12
						%h3= t('hr.title')
						%h5= t('hr.subtitle')
				.row
					.col.s12.m6
						.icon-block
							%h2.center.brown-text
								%i.mdi-image-flash-on
							%h5.center= t('hr.employee.header')
							%p.light= t('hr.employee.p1_html')
							%p.light= t('hr.employee.p2_html')
							%p.light= t('hr.employee.p3_html')


					.col.s12.m6
						.icon-block
							%h2.center.brown-text
								%i.mdi-action-settings
							%h5.center= t('hr.employer.header')
							%p.light= t('hr.employer.p1_html')
							%p.light= t('hr.employer.p2_html')



				.row
					.col.s12
						%p.light= t('hr.thrive.p1_html')
						%p.light= t('hr.thrive.p2_html')


		%footer.page-footer.black
			.container
				.row
					.col.l6.s12
						%h5.white-text Spejdernes Lejr 2017
						%p.grey-text.text-lighten-4= t('colofon.scout')
						%p.grey-text.text-lighten-4= t('colofon.hr_html')

					.col.l3.s12
						%h5.white-text Settings
						%ul
							%li
								%a.white-text{href:  "#!"} HR ledelsen
							%li
								%a.white-text{href:  "#!"} Jobcenteret
							%li
								%a.white-text{href:  "#!"} Udvalgsjobkonsulenterne
							%li
								%a.white-text{href:  "#!"} Trivs'lerne
					.col.l3.s12
						%h5.white-text Connect
						%ul
							%li
								%a.white-text{href:  "#!"} Pia og Johannes
							%li
								%a.white-text{href:  "#!"} Marianne
							%li
								%a.white-text{href:  "#!"} Karsten
							%li
								%a.white-text{href:  "#!"} Rene

				.row
					= image_tag "mint_100.png", class: "right"

			.footer-copyright
				.container{style:  "font-size: 0.75em"}
					Made by
					%a.brown-text.text-lighten-3{href:  "http://twitter.com/wdiechmann", target:  "_blank"} wdiechmann

		/ Modal Structure
		#jobopslag.modal.sl2017color.lighten-1
			.modal-header
				%h4.white-text{style:  "margin: 10px 0px 10px 10px" }
					Nyt job opslag
			.modal-content.sl2017color.lighten-5
				= render 'jobs/form'


		/ Modal Structure
		#jobtilmelding.modal
			.modal-header
				%h4.white-text{ style: "margin: 10px 0px 10px 10px "} Ny job tilmelding
			.modal-content.orange.lighten-4
				%h4 Job tilmelding
				%form#new_jobber.simple_form.new_jobber{"accept-charset" => "UTF-8", action:  "/jobbers", method:  "post", novalidate:  "novalidate"}
					%input{name:  "utf8", type:  "hidden", value:  "✓"}/
					%input{name:  "authenticity_token", type:  "hidden", value:  "EJYM2pNCTbSKZVTojU9r7nKfUjrzPrLXAu4V9wqEfjtamErrdGnDuJTszAoIHSREvCEuZnR1e58eUDuoWRJ0Cw=="}/
					.form-group
						.form-control-wrapper
							%input#jobber_name.form-control.empty.bs-material{autofocus:  "autofocus", name:  "jobber[name]", type:  "text"}/
							.floating-label Fulde navn
							%span.material-input
					.form-group
						.form-control-wrapper
							%input#jobber_street.form-control.empty.bs-material{autofocus:  "autofocus", name:  "jobber[street]", type:  "text"}/
							.floating-label Gade og nummer
							%span.material-input
					.form-group
						.form-control-wrapper
							%input#jobber_zip_city.form-control.empty.bs-material{autofocus:  "autofocus", name:  "jobber[zip_city]", type:  "text"}/
							.floating-label Postnr By
							%span.material-input
					.form-group
						.form-control-wrapper
							%input#jobber_phone_number.form-control.empty.bs-material{autofocus:  "autofocus", name:  "jobber[phone_number]", type:  "text"}/
							.floating-label Telefon nummer
							%span.material-input
					.form-group
						.form-control-wrapper
							%input#jobber_email.form-control.empty.bs-material{autofocus:  "autofocus", name:  "jobber[email]", type:  "text"}/
							.floating-label Email adresse
							%span.material-input
					.form-group
						.form-control-wrapper
							%input#jobber_jobbers_controlled.form-control.bs-material{autofocus:  "autofocus", name:  "jobber[jobbers_controlled]", type:  "number", value:  "1"}/
							.floating-label Hvormange jobbere kontrollerer jobberen
							%span.material-input
					.form-group
						.form-control-wrapper
							%input#jobber_jobber_assigned.date.form-control.bs-material{autofocus:  "autofocus", name:  "jobber[jobber_assigned]", type:  "date"}/
							.floating-label Hvornår er jobberen anvist arbejde
							%span.material-input
					.form-group
						.form-control-wrapper
							%input#jobber_next_contact_at.date.form-control.bs-material{autofocus:  "autofocus", name:  "jobber[next_contact_at]", type:  "date"}/
							.floating-label Hvornår skal jobberen kontaktes næste gang
							%span.material-input
					.form-group
						.form-control-wrapper
							%textarea#jobber_description.form-control.empty.bs-material{autofocus:  "autofocus", name:  "jobber[description]"}
							.floating-label Kommentarer i forbindelse med jobanvisning/interview af jobberen
							%span.material-input
			.modal-footer
				%a.modal-action.modal-close.waves-effect.waves-green.btn-flat{href:  "#!"} Giv mig et job

		:coffeescript

			$(document).on 'ready page:load', ->
				pageOnLoad()
				newMessage()
				jobberRegistration()
				userSignIn()
				msg = $('#flash_notice').html()

				$('.form-actions input').on 'click', (e) ->
					e.preventDefault()
					url = '/jobs.js'
					data = $(this).closest('form').serialize()
					$.ajax
						url: url,
						type: "post",
						data: data
						statusCode:
							201: (response,textStatus,jqXHR) ->
								# $(elem).html(response.responseText)
								$modal = $('#jobopslag.modal')
								$modal.closeModal()

				-# $('.btn.job-btn').on 'click', (event) ->
				-# 	$('#jobber_job_id').val($(this).data('job-id'))
				-# 	$('#jobber_job_name').val($(this).data('job-name'))
				-# 	$('.jobber_job_group').show()

				if msg
					swal 'Super!', msg, 'success'
