					};

					(function(el) {
					    el.css('left', '-100%');
					    $(window).resize(function() {
					        if (!el.hasClass('ani-processed') && el.length > 0) {
					            el.data('scrollPos', el.offset().top - $(window).height() + el.outerHeight());
					        }
					    }).scroll(function() {
