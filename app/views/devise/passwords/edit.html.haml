.authform
	= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form'} do |f|
		%h3
			= t(:change_your_password)
		= f.error_notification
		= f.hidden_field :reset_password_token
		.form_group
			= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control floating-label', placeholder: t('new_password')
			= f.error :password
		%p
		.form-group
			= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control floating-label', placeholder: t('confirm_new_password')
			= f.error :password_confirmation
			
		= f.submit t(:change_my_password), class: 'btn btn-primary'
