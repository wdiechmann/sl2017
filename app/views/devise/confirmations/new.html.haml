.container
	.authform
		= simple_form_for resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form'} do |f|
			%h3
				= t('devise.confirmations.resend_instructions')
			= f.error_notification
			= f.full_error :confirmation_token
			%h3 &nbsp;

			.form-group
				= f.email_field :email, placeholder: t('devise.forms.email'), autofocus: true, class: 'form-control floating-label'
				= f.error :email

			= f.submit t('devise.forms.resend_confirmation'), class: 'btn btn-primary'

			.form-group
				= t('devise.registrations.already_signed_up')
				= link_to t('devise.navigation.sign_in'), new_session_path(resource_name), class: 'label label-info'


			.form-group
				= t('devise.registrations.not_signed_up')
				= link_to t('devise.navigation.sign_up'), new_registration_path(resource_name), class: 'label label-info'


			- if devise_mapping.recoverable?
				.form-group
					= t('devise.passwords.forgotten')
					= link_to t('devise.navigation.forgot'), new_password_path(resource_name), class: 'label label-info'
