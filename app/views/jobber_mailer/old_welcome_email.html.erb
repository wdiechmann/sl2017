<%-
@name=@jobber.name
@street=@jobber.street
@zip_city=@jobber.zip_city
@email=@jobber.email
@phone_number=@jobber.phone_number
@id="%05d" % @jobber.id
@created_at=@jobber.created_at.strftime '%d/%m/%Y'
