-# Rails flash messages styled for Bootstrap 3.0
.container
  - flash.each do |name, msg|
    - if msg.is_a?(String)
      %div{:class => "alert alert-#{name.to_s == 'notice' ? 'success teal accent-4' : 'danger red accent-3'}"}
        %i.mdi-navigation-close{"aria-hidden" => "true", "data-dismiss" => "alert"}
        = content_tag :div, msg.html_safe, :id => "flash_#{name}"
