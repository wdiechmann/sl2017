              %span.material-input
          .form-group
            .form-control-wrapper
              %input#jobber_zip_city.form-control.empty.bs-material{:autofocus => "autofocus", :name => "jobber[zip_city]", :type => "text"}/
              .floating-label Postnr By
              %span.material-input
          .form-group
            .form-control-wrapper
              %input#jobber_phone_number.form-control.empty.bs-material{:autofocus => "autofocus", :name => "jobber[phone_number]", :type => "text"}/
              .floating-label Telefon nummer
              %span.material-input
          .form-group
            .form-control-wrapper
              %input#jobber_email.form-control.empty.bs-material{:autofocus => "autofocus", :name => "jobber[email]", :type => "text"}/
